{% extends "SSPlatformBundle::layout.html.twig"%}


{% block title %}

{% endblock %}

{% block ssplatform_body %}

    {% if rslt == true  %}

        {% if listOffres is empty  %}
            Nous n'avons pas trouvé d'offres pour cette recherche
        {% else %}

        <h2>Liste des annonces</h2>
        <table class="table table-striped">
            <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Intitulé</th>
                <th scope="col">Posté par</th>
                <th scope="col">Date publication</th>
            </tr>
            </thead>
            <tbody>
            {% for advert in listOffres %}
                <tr>
                    <th>
                        {{ advert.id }}
                    </th>
                    <td><a href="{{ path('ss_platform_view', {'id': advert.id}) }}">
                            {{ advert.intitule }}
                        </a></td>
                    <td>{{ advert.auteur.username}}</td>
                    <td>{{ advert.dateOffre|date('d/m/Y') }}</td>
                </tr>


            {% endfor %}
            </tbody>
        </table>
        {% endif %}

    {% else %}
        {{ form(searchForm) }}
    {% endif %}

{% endblock %}